<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="view-port">
        <div id="side-bar">
            <header>
                <a href="#">
                    Hệ thống phân loại, đánh giá tin tức
                </a>
            </header>
            <ul class="nav">
                <li>
                    <a href="#"><i class="fa fa-th-list" aria-hidden="true"></i>Danh sách theo dõi</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-newspaper-o" aria-hidden="true"></i>Danh sách bài viết</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-pie-chart" aria-hidden="true"></i>Thống kê - Đánh giá</a>
                </li>
            </ul>
            <footer>
                Copyright © 2020 Hai Bui. All Rights Reserved
            </footer>
        </div>
        <div id="content">
            <div id="header">
                <ul>
                    <li>
                        <a href="#">
                            Đăng xuất&nbsp;
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
                <ul>
                    <li>
                        <a href="#">
                            Download tool&nbsp;
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
